<h1>Create a Team and Heroes!</h1>

<form action="/teams" method="post">
  <label for="team-name">Team Name:</label><br>
  <input type="text" name="team[name]"><br>
  <label for="team-motto">Team Motto:</label><br>
  <input type="text" name="team[motto]"><br>

  <h2>Hero 1</h2>

  <label for="first-hero-name">First Hero Name:</label><br>
  <input id="hero_name_1" type="text" name="team[heros][][name]"><br>
  <label for="first-hero-power">First Hero Power:</label><br>
  <input id="hero_power_1" type="text" name="team[heros][][power]"><br>
  <label for="first-hero-booty">First Hero Biography:</label><br>
  <input id="hero_booty_1" type="text" name="team[heros][][biography]"><br>

  <h2>Hero 2</h2>

  <label for="second-hero-name">Second Hero Name:</label><br>
  <input id="hero_name_2" type="text" name="team[heros][][name]"><br>
  <label for="second-hero-type">Second Hero Power:</label><br>
  <input id="hero_power_2" type="text" name="team[heros][][power]"><br>
  <label for="second-hero-booty">Second Hero Booty:</label><br>
  <input id="hero_booty_2" type="text" name="team[heros][][biography]"><br>

  <h2>Hero 3</h2>

  <label for="third-hero-name">Third hero Name:</label><br>
  <input id="hero_name_3" type="text" name="team[heros][][name]"><br>
  <label for="third-hero-type">Third Hero Power:</label><br>
  <input id="hero_power_3" type="text" name="team[heros][][power]"><br>
  <label for="third-hero-booty">Third Hero Booty:</label><br>
  <input id="hero_booty_3" type="text" name="team[heros][][biography]"><br>

  <input id="Submit" type="submit">
</form>
